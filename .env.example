# Budget App - Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Option 1: Turso Cloud (recommended for Vercel deployment)
# Sign up at https://turso.tech (free tier: 500 DBs, 9GB storage)
# Create database: turso db create budget-app
# Get URL: turso db show budget-app --url
# Get token: turso db tokens create budget-app
TURSO_DATABASE_URL=libsql://your-database-name.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Option 2: Local SQLite file (for self-hosting with Docker)
# Just set the URL to a file path, no auth token needed
# TURSO_DATABASE_URL=file:/app/data/budget.db
# TURSO_AUTH_TOKEN=

# Option 3: Leave both empty for in-memory SQLite (development only)
# Data will NOT persist across restarts!

# ===========================================
# APPLICATION MODE
# ===========================================

# Set to 'true' for public demo deployment (only /demo page accessible)
# Leave empty or 'false' for normal operation
DEMO_MODE=false

# Allow demo access on private instances (set to 'true' to enable /demo page)
# For self-hosted private instances, leave this empty or 'false' to block demo access
ALLOW_DEMO=false

# ===========================================
# OPTIONAL: External APIs
# ===========================================

# Exchange rates API (for multi-currency support)
# Get free API key at https://exchangeratesapi.io
# EXCHANGE_RATES_API_KEY=your-api-key
